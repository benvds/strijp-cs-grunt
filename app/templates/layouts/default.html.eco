	</div>

	<%- @getBlock("scripts").add(["/js/vendor/jquery.js", "/js/vendor/lodash.js", "/js/vendor/holder.js", "/js/slider.js", "/js/plugins.js", "/js/main.js"]).toHTML() %>
</body>
</html>
